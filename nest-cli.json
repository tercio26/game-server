{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.yaml",
        "outDir": "./dist/",
        "watchAssets": true
      },
      { "include": "src/i18n/**/*", "outDir": "./dist/i18nn" },
      {
        "include": "i18n/**/*",
        "watchAssets": true,
        "outDir": "./dist/"
      }
    ]
  }
}